<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>13.0</LangVersion>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<PropertyGroup Label="Package Details">
		<Title>Code-First Modeling Attribute Library</Title>
		<Authors>Alexander Rosenberg</Authors>
		<Description>Library with attributes to control the CTMGenerator.</Description>
		<Copyright>Copyright (c) Alexander Rosenberg 2025</Copyright>
		<PackageProjectUrl>https://github.com/KeyboardMashingDelux/CodeToModel-Project</PackageProjectUrl>
		<RepositoryUrl>https://github.com/KeyboardMashingDelux/CodeToModel-Project</RepositoryUrl>
		<PackageTags>MDE, modeling, NMF, source code generator, roslyn</PackageTags>
		<PackageReleaseNotes>Added default value attribute and adjusted IsContainment behaviour.</PackageReleaseNotes>
		<Version>1.1.0</Version>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
	</PropertyGroup>

	<ItemGroup Label="Package References">
		<PackageReference Include="NMF-Basics" Version="2.0.449" />
	</ItemGroup>

	<ItemGroup Label="Private Package References">
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>
</Project>
